<%= render :partial => '/helpers/header' %>
<body>
<div id="header-wrapper">
<div class="application" id="header">
	<a href="/"><div id="banner" style="background: url('/images/logo.png') left top no-repeat;">Lab Cog!</div></a>
	<div class="messages">
		<% if notice %><div class="notice"><%= notice %></div><% end %>
	 	<% if alert %><div class="alert"><%= alert %></div><% end %>
	</div>
	<div class="tabs">
		<div id="current_user"><%= current_user.user_name if current_user %></div>	
		<ul>
			<a href="/help"><li>Help</li></a>
			<% if user_signed_in? %>
			  <li>
			  <%= link_to('Sign out', destroy_user_session_path) %>        
			  </li>
			<% else %>
			  <li>
			  <%= link_to('Sign in', new_user_session_path)  %>  
			  </li>
			<% end %>
		</ul>
	</div>
	</div>
</div>
<div id="top-tray">
	<div class="page-title" ><%= sanitize(page_title) %></div>
</div>
<br style="clear:both"/>
<div id="content-wrapper">
<div id="content" class="external">
  <%= yield %>
</div>
<br style="clear:both" />
</div>
<%= render(:partial => 'helpers/footer') %>
</html>